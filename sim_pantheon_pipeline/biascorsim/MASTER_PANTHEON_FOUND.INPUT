BATCH_INFO: sbatch $SBATCH_TEMPLATES/SBATCH_Midway2.TEMPLATE 100
PATH_SNDATA_SIM:  $SCRATCH_SIMDIR
# specify the three survey tiers: SHALLOW,MEDIUM,DEEP

# SHALLOW Survey Data
GENVERSION: SALT3pipe_LOWZ_BIASCOR
GENMODEL: SALT2.JLA-B14
GENOPT: GENRANGE_REDSHIFT 0.02 0.08
SIMGEN_INFILE_Ia: simulation/lowz/SIMGEN_SALT3TEST.INPUT

# SALT2
GENVERSION: SALT3pipe_PS1_BIASCOR
GENMODEL: SALT2.JLA-B14
GENOPT: GENRANGE_REDSHIFT 0.05 0.7
SIMGEN_INFILE_Ia: simulation/ps1_spec/SIMGEN_PS1SPEC.INPUT

# Foundation
GENVERSION: SALT3pipe_Foundation_BIASCOR
GENOPT: GENRANGE_REDSHIFT 0.015 0.08
GENOPT: GENPERFECT 0
GENOPT: NGENTOT_LC 100
SIMGEN_INFILE_Ia: simulation/foundation/sim_found.input

# Foundation
GENVERSION: SALT3pipe_DES_BIASCOR
GENOPT: GENRANGE_REDSHIFT 0.05 1.0
GENOPT: GENPERFECT 0
GENOPT: NGENTOT_LC 1000
SIMGEN_INFILE_Ia: simulation/des/sim_DES.input


ENDLIST_GENVERSION:

RESET_CIDOFF:  2  # uniqe random CID among all versions
# specify sim-input files for snlc_sim.exe

# Define required global items to ensure uniformity among all jobs
GENOPT_GLOBAL: GENMEAN_SALT2ALPHA  0.165
GENOPT_GLOBAL: GENMEAN_SALT2BETA 3.032
GENOPT_GLOBAL: GENSIGMA_SALT2ALPHA  0.0   0.0
GENOPT_GLOBAL: GENSIGMA_SALT2BETA  0.0   0.0

GENPREFIX:   PANTHEON_SIMULATED_BIASCOR
FORMAT_MASK: 48          # 2=TERSE    16=RanCID  32=FITS-FORMAT
RANSEED_REPEAT: 20 123459
